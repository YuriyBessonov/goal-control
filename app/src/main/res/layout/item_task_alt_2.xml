                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="left"
                android:id="@+id/tv_due_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="11.22.1963"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/text_size_small" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreyLight"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/filled_circle"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_hor_small"
                    android:text="Высокий"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreyLight"/>
            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_task_name"
                android:layout_alignStart="@+id/tv_task_name"
                tools:text="Имя проекта"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/text_size_small"
                android:layout_below="@+id/tv_task_name"
                android:layout_toLeftOf="@+id/la_progress_values"
                android:layout_marginRight="@dimen/item_task_hor_margin_large"
                android:layout_marginBottom="@dimen/item_task_vert_margin_small" />

        </LinearLayout>


    </LinearLayout>




</FrameLayout>
