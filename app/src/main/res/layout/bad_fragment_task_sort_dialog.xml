<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="@dimen/dialog_min_width"
              android:orientation="vertical"
              tools:context="app.warinator.goalcontrol.trash.BadTaskSortDialogFragment"
              android:padding="@dimen/activity_horizontal_margin"
              android:baselineAligned="false">

    <TextView
        android:text="Активные критерии"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrey"/>
    <HorizontalScrollView
        android:layout_marginTop="@dimen/padding_vert_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/la_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:text="Доступные критерии"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_vert_standard"
        android:textColor="@color/colorGrey"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_vert_small">
        <LinearLayout
            android:id="@+id/la_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>


</LinearLayout>
