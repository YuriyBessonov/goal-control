<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/la_dialog_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_width_large"
        android:background="@drawable/pattern_repeat_1">

        <ImageButton
            android:id="@+id/btn_ok"
            android:scaleType="fitXY"
            android:padding="@dimen/dialog_header_icon_padding"
            android:layout_width="@dimen/icon_width_large"
            android:layout_height="@dimen/icon_width_large"
            style="?android:attr/buttonBarButtonStyle"
            android:src="@drawable/ic_check"
            android:layout_marginLeft="@dimen/padding_hor_standard"
            android:layout_marginStart="@dimen/padding_hor_standard"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageButton
            android:id="@+id/btn_cancel"
            android:scaleType="fitXY"
            android:padding="@dimen/dialog_header_icon_padding"
            android:layout_width="@dimen/icon_width_large"
            android:layout_height="@dimen/icon_width_large"
            style="?android:attr/buttonBarButtonStyle"
            android:src="@drawable/ic_close"
            android:layout_marginRight="@dimen/padding_hor_standard"
            android:layout_marginEnd="@dimen/padding_hor_standard"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textSize="@dimen/text_size_large_x"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_toStartOf="@id/btn_ok"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_ok"
            android:layout_toRightOf="@id/btn_cancel"
            android:layout_toEndOf="@id/btn_cancel"/>
    </RelativeLayout>
</FrameLayout>
