<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="app.warinator.goalcontrol">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.TheApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_config"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.TaskEditActivity"
                  android:screenOrientation="portrait"/>

        <service
            android:name=".timer.TimerNotificationService"
            android:exported="false"/>

        <activity android:name=".activity.StatisticsActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.TaskInfoActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.AboutActivity"
            android:theme="@style/AppTheme.MaterialAboutActivity">
        </activity>
        <activity android:name=".activity.HelpActivity">
        </activity>
    </application>

</manifest>